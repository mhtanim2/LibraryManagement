@model Member

@{
    string action = ViewBag.Action ?? string.Empty;
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                @if (action.ToLower() == "update")
                {
                    <h2 class="text-white py-2">Update Membaer</h2>
                }
                else if (action.ToLower() == "create")
                {
                    <h2 class="text-white py-2">Create Membaer</h2>
                }
                else
                {
                    <h2 class="text-white py-2">Delete Membaer</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class=" p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input asp-for="FirstName" class="form-control border shadow" disabled />
                    }
                    else
                    {
                        <input asp-for="FirstName" class="form-control border shadow" />
                    }

                    <label asp-for="FirstName" class="ms-2"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input asp-for="LastName" class="form-control border shadow summernote" disabled/>

                    }
                    else
                    {
                        <input asp-for="LastName" class="form-control border shadow summernote"/>
                    }

                    <label asp-for="LastName" class="ms-2"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input asp-for="Email" class="form-control border shadow summernote" disabled />

                    }
                    else
                    {
                        <input asp-for="Email" class="form-control border shadow summernote" />
                    }

                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input asp-for="PhoneNumber" class="form-control border shadow summernote" disabled />

                    }
                    else
                    {
                        <input asp-for="PhoneNumber" class="form-control border shadow summernote" />
                    }

                    <label asp-for="PhoneNumber" class="ms-2"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (action.ToLower() == "update")
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else if (action.ToLower() == "create")
                        {
                            <button type="submit" class="btn btn-success form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger form-control">Delete</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Member" asp-action="Index" class="btn btn-outline-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>

        @*         <partial name="_Villa" model="@Model"/> *@
    </div>
