@model BookVM // Here we have the villa model
@{
    string action = ViewBag.Action ?? string.Empty;
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                @if (action.ToLower() == "update")
                {
                    <h2 class="text-white py-2">Update Book</h2>
                }
                else if (action.ToLower() == "create")
                {
                    <h2 class="text-white py-2">Create Book</h2>
                }
                else
                {
                    <h2 class="text-white py-2">Delete Book</h2>
                }
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Book.BookId" hidden />

            <div class=" p-3">
                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <select asp-for="Book.AuthorId" asp-items="@Model.AuthorList" class="form-select border shadow" disabled >
                            <option disabled selected>--Select Author--</option>
                        </select>
                    }
                    else
                    {

                        <select asp-for="Book.AuthorId" asp-items="@Model.AuthorList" class="form-select border shadow">
                            <option disabled selected>--Select Author--</option>
                        </select>
                    }
                    <label asp-for="Book.AuthorId" class="ms-2"></label>
                    <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
                </div>
                
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input asp-for="Book.Title" class="form-control border shadow" disabled />
                    }
                    else
                    {
                        <input asp-for="Book.Title" class="form-control border shadow" />
                    }

                    <label asp-for="Book.Title" class="ms-2"></label>
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input id="rtDescription" asp-for="Book.Genre" class="form-control border shadow summernote" disabled></input>

                    }
                    else
                    {
                        <input id="rtDescription" asp-for="Book.Genre" class="form-control border shadow summernote"></input>

                    }

                    <label asp-for="Book.Genre" class="ms-2"></label>
                    <span asp-validation-for="Book.Genre" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input id="rtDescription" asp-for="Book.ISBN" class="form-control border shadow summernote" disabled/>

                    }
                    else
                    {
                        <input id="rtDescription" asp-for="Book.ISBN" class="form-control border shadow summernote"/>

                    }

                    <label asp-for="Book.ISBN" class="ms-2"></label>
                    <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input id="rtDescription" asp-for="Book.TotalCopies" class="form-control border shadow summernote" disabled/>

                    }
                    else
                    {
                        <input id="rtDescription" asp-for="Book.TotalCopies" class="form-control border shadow summernote"/>

                    }

                    <label asp-for="Book.TotalCopies" class="ms-2"></label>
                    <span asp-validation-for="Book.TotalCopies" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input id="rtDescription" asp-for="Book.AvailableCopies" class="form-control border shadow summernote" disabled />

                    }
                    else
                    {
                        <input id="rtDescription" asp-for="Book.AvailableCopies" class="form-control border shadow summernote" />

                    }

                    <label asp-for="Book.AvailableCopies" class="ms-2"></label>
                    <span asp-validation-for="Book.AvailableCopies" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @if (action.ToLower() == "delete")
                    {
                        <input id="rtDescription" type="date" asp-for="Book.PublicationDate" class="form-control border shadow summernote" disabled />

                    }
                    else
                    {
                        <input id="rtDescription" type="date" asp-for="Book.PublicationDate" class="form-control border shadow summernote" />

                    }

                    <label asp-for="Book.PublicationDate" class="ms-2"></label>
                    <span asp-validation-for="Book.PublicationDate" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (action.ToLower() == "update")
                        {
                            <button type="submit" class="btn btn-success form-control">Update</button>
                        }
                        else if (action.ToLower() == "create")
                        {
                            <button type="submit" class="btn btn-success form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success form-control">Delete</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>